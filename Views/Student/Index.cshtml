@model List<NewProject.Models.Student>

<h2>Student Information</h2>

<div>
    <a href="@Url.Action("Create", "Student")" class="btn btn-primary">Create New Student</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Student Name</th>
            <th>Hall Ticket Number</th>
            <th>Course Name</th>
            <th>Subject Name</th>
            <th>Internal Marks (Max)</th>
            <th>Internal Marks (Secured)</th>
            <th>Semester Marks (Max)</th>
            <th>Semester Marks (Secured)</th>
            <th></th> <!-- Edit Button -->
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.StudentName</td>
                <td>@student.HallTicketNumber</td>
                <td>@student.CourseName</td>
                <td>@student.SubjectName</td>
                <td>@student.InternalMarksMaximum</td>
                <td>@student.InternalMarksSecured</td>
                <td>@student.SemesterMarksMaximum</td>
                <td>@student.SemesterMarksSecured</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.StudentId" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
